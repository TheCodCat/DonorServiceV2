<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DonorApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DonorApplication"
    Shell.FlyoutBehavior="Flyout"
    Title="DonorApplication">

    <ShellContent Title="Вход"
        ContentTemplate="{DataTemplate local:AuthorizationPage}"
        Route="MainPage" />

    <ShellContent Title="Запись на сдачу крови"
                  ContentTemplate="{DataTemplate local:RecordPage}"
                  Route="RecordPage"/>

    <ShellContent Title="Профиль"
        ContentTemplate="{DataTemplate local:EditProfilePage}"
        Route="EditPage" />

    <ShellContent Title="Рекомендации"
                  ContentTemplate="{DataTemplate local:RecomendationPage}"
                  Route="RecomendationPage"/>

</Shell>
